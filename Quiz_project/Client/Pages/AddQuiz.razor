@page "/addquiz"
@inject HttpClient http
@inject NavigationManager navigation

<h3>Add Quiz</h3>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="Title"> Title *</label>
            <input form="Title" class="form-control" @bind="@Quiz.Title" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-primary" @onclick="@Save" value="Save" />            
        </div>
    </div>
</div>

@code {

    QuizViewModel Quiz = new QuizViewModel();

    protected async Task Save()
    {
        await http.PostAsJsonAsync("api/Quiz/AddNewQuiz", Quiz);
        navigation.NavigateTo("mypage");
    }
}
